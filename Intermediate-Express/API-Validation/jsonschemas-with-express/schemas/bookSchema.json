{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/example.json",
    "type": "object",
    "title": "Root Schema",
    "required": ["book"],
    "properties": {
        "book": {
            "type": "object",
            "title": "The book Schema",
            "required": [
                "isbn",
                "amazon-url",
                "author",
                "language",
                "pages",
                "publisher",
                "title",
                "year"
            ],
            "properties": {
                "isbn": {
                    "type": "string",
                    "title": "The isbn Schema",
                    "examples": ["0691161518"]
                },
                "amazon-url": {
                    "type": "string",
                    "title": "The amazon-url Schema",
                    "examples": ["http://a.co/eobPtX2"]
                },
                "author": {
                    "type": "string",
                    "title": "The author Schema",
                    "examples": ["Matthew Lane"]
                },
                "language": {
                    "type": "string",
                    "title": "The language Schema",
                    "examples": ["english"]
                },
                "pages": {
                    "type": "integer",
                    "title": "The pages Schema",
                    "examples": [264]
                },
                "publisher": {
                    "type": "string",
                    "title": "The publisher Schema",
                    "examples": ["Princeton University Press"]
                },
                "title": {
                    "type": "string",
                    "title": "The title Schema",
                    "examples": ["Power-Up: Unlocking Hidden Math in Video Games"]
                },
                "year": {
                    "type": "integer",
                    "title": "The year Schema",
                    "examples": [2017]
                }
            }
        }
    }
}
